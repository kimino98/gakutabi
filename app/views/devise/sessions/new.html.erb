<h2>ログイン</h2>

<div class='login-flash-message'>
  <%= flash[:notice] %>
  <%= flash[:alert] %>
</div>
<%= form_with model: @user, url: user_session_path, class: 'registration-main', local: true do |f| %>
  <div class='form-group'>
    <label>メールアドレス</label>
    <%= f.email_field :email, class:"input-default", id:"email", placeholder:"メールアドレス", maxlength:"40" %>
  </div>

  <div class="form-group">
    <label>パスワード(6文字以上)</label>
    <%= f.password_field :password, class:"input-default", id:"password", placeholder:"6文字以上の半角英数字", maxlength:"40"%>
  </div>

  <div class="actions">
    <%= f.submit "ログイン" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
