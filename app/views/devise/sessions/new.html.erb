<% breadcrumb :login%>
<%= form_with model: @user, url: user_session_path, class: 'registration-main', local: true do |f| %>
<%= render "shared/error_messages", model: f.object %>
  <div class="login-main">
    <div class="login-title">
      <h1>ログイン</h1>
    </div>
    <div class="login-box">
      <div class="form-group">
        <div class="form-name">
          <label >メールアドレス</label>
        </div>
        <div class="form-box">
          <%= f.email_field :email, class:'form-control', id: 'formGroupExampleInput', placeholder:"メールアドレス" %>
        </div>
      </div>

      <div class="form-group">
        <div class="form-name">
          <label >パスワード(6文字以上)</label>
        </div>
        <div class="form-box">
          <%= f.password_field :password, class:'form-control', id: 'formGroupExampleInput', placeholder:"6文字以上の半角英数字" %>
        </div>
      </div>
    </div>
    <div class="action">
      <%= f.submit "新規登録", class:"btn btn-info"%>
    </div>
  </div>
<% end %>


