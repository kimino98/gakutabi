<h2>新規登録</h2>

<%= form_with model: @user, url: user_registration_path, class: "registration-main", local: true do |f| %>
<%= render "devise/shared/error_messages", model: f.object %>
  
  <div class='form-group'>
    <label>ニックネーム</label>
    <%= f.text_field :nickname, class:'input-default', placeholder:"例) 旅好き太郎", maxlength:"40" %>
  </div>

  <div class='form-group'>
    <label>メールアドレス</label>
    <%= f.email_field :email, class:"input-default", id:"email", placeholder:"メールアドレス", maxlength:"40" %>
  </div>

  <div class="form-group">
    <label>パスワード(6文字以上)</label>
    <%= f.password_field :password, class:"input-default", id:"password", placeholder:"6文字以上の半角英数字", maxlength:"40"%>
  </div>

  <div class="form-group">
    <label>パスワード再確認</label>
    <%= f.password_field :password_confirmation, class:"input-default", id:"password-confirmation", placeholder:"同じパスワードを入力して下さい", maxlength:"40" %>
  </div>

  <div class="form-group">
    <label>所属先名</label>
    <%= f.text_field :company_name, class:'input-default', placeholder:"例) 〇〇中学校 株式会社◯◯", maxlength:"40" %>
  </div>

  <div class="form-group">
    <label>職業</label>
     <%= f.collection_select(:profession_id, Profession.all, :id, :name, {}, {class:""}) %>
  </div>

  <div class="actions">
    <%= f.submit "登録する" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
