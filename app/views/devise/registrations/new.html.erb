

<%= form_with model: @user, url: user_registration_path, class: "registration-main", local: true do |f| %>
  <%= render "shared/error_messages", model: f.object %>
  <div class="new-user-main">
    <div class="new-user-title">
      <h1>新規登録</h1>
    </div>

    <div class="new-user-box">
      <div class="form-group">
        <div class="form-name">
          <label >ニックネーム</label>
        </div>
        <div class="form-box">
          <%= f.text_field :nickname, class:'form-control', placeholder:"例) 旅好き太郎" %>
        </div>
      </div>

      <div class="form-group">
        <div class="form-name">
          <label >メールアドレス</label>
        </div>
        <div class="form-box">
          <%= f.email_field :email, class:'form-control', id: 'formGroupExampleInput', placeholder:"メールアドレス" %>
        </div>
      </div>

      <div class="form-group">
        <div class="form-name">
          <label >パスワード(6文字以上)</label>
        </div>
        <div class="form-box">
          <%= f.password_field :password, class:'form-control', id: 'formGroupExampleInput', placeholder:"6文字以上の半角英数字" %>
        </div>
      </div>

      <div class="form-group">
        <div class="form-name">
          <label >パスワード再確認</label>
        </div>
        <div class="form-box">
          <%= f.password_field :password_confirmation, class:'form-control', id: 'formGroupExampleInput', placeholder:"同じパスワードを入力して下さい" %>
        </div>
      </div>

      <div class="form-group">
        <div class="form-name">
          <label >所属先名</label>
        </div>
        <div class="form-box">
          <%= f.text_field :company_name, class:'form-control', id: 'formGroupExampleInput', placeholder:"例) 〇〇中学校 株式会社◯◯", maxlength:"40" %>
        </div>
      </div>

      <div class='form-group'>
        <div class="form-name">
          <label>職業</label>
        </div>
        <div class="form-box">
          <%= f.collection_select(:profession_id, Profession.all, :id, :name, {}, {class:""}) %>
        </div>
      </div>

      <div class='form-group'>
        <div class="form-name">
          <label>プロフィール写真</label>
        </div>
        <div class="form-box">
          <%= f.file_field :avatar, class:"input-default" %>
        </div>
      </div>
    </div>
    <div class="action">
      <%= f.submit "新規登録", class:"btn btn-info"%>
    </div>
  </div>
<% end %>

<div class="new-user">
  <label>アカウントお持ちのからはこちら</label>
  <%= render "devise/shared/links" %>
</div> 