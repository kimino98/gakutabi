<%# CSS・・・assets/stylesheets/shared/header.css %>


<header class="top-page-header">
 <div class="header-top-content">
    <div class="headder-icon">
      <%= link_to image_tag("logo.png", class:"gakutabi-icon"), "/" %>
    </div>
 
    <div class="nav">
      <ul class='lists-right'>
        <%# 条件分岐 %>
        <% if user_signed_in? %>
          <li><%= link_to current_user.nickname, edit_user_registration_path, class: "user-nickname" %></li>
          <li><%= link_to 'ログアウト', destroy_user_session_path, method: :delete, class: "logout" %></li> 
          <%= link_to(new_review_path, class: 'post-btn') do %>
            <span class='post-btn-text'>投稿</span>
            <i class="far fa-paper-plane"></i>
            <% end %>
         <% else %>
          <li><%= link_to 'ログイン', new_user_session_path, class: "login" %></li>
          <li><%= link_to '新規登録', new_user_registration_path, class: "sign-up" %></li>
        <% end %>
      </ul>
    </div>
  </div>
</header>