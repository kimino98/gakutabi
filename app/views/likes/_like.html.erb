<% if user_signed_in? && review.liked_by?(current_user) %>
    <%=link_to review_like_path(review, current_user), method: :delete, remote: true, class: "review-unlike", id: :"like-button-#{review.id}" do %>
      <i class="fas fa-heart unlike-heart" ></i> 
    <%end%>
      <%= review.likes.count%>
  <% else %>  
    <%= link_to review_likes_path(review), method: :post, remote:true, class: "review-unlike", id: :"like-button-#{review.id}" do %>
      <i class="far fa-heart like-heart"></i> 
    <%end%>
<% end %>