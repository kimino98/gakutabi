<div class="main">
  <div class="introduction-box">
    <div class="introduction"><img class="introduction-img" src="assets/photo1.jpg"></div>
    <div class="introduction"><img class="introduction-img" src="assets/photo2.jpg"></div>
    <div class="introduction"><img class="introduction-img" src="assets/photo3.jpg"></div>
    <div class="introduction"><img class="introduction-img" src="assets/photo4.jpg"></div>
  </div>

  
  <div class="review-contents">
    <% @reviews.each do |review| %>
      <div class="review-box">
        <div class="review-upper-row">
          <div class="review_user__img">
            <%if review.user.avatar.attached?%>
              <%=link_to (image_tag review.user.avatar, class: "user-img"), "#"%>
            <%else%>
              <%=link_to (image_tag 'default-icon.png' , class: "user-img"), "#"%>
            <%end%>
          </div>

          <div class="review-nickname">
            <%= review.user.nickname %>
          </div>

          <div class="review-profession">
            <p>職業：<%= review.user.profession.name %></p>
          </div>

          <%if user_signed_in? && current_user.id==review.user.id%>
            <div class="review-gear">
              <i class="fas fa-cog" id="lists"></i>
              <%= link_to(review_path(review.id), method: :delete, data: { confirm: '本当に削除しますか'} ) do %>
                <i class="fas fa-trash-alt"></i>
              <% end %>
            </div>
          <% end %>
        </div>
         
        <div class="review-title">
          <div class="review-faclity_name">
            <p>施設名：<%= review.faclity_name %><p>
          </div>
        </div>
        <div class="tag_name">
          タグ:
        </div>
        <div class="review-image">
          <%=link_to (image_tag review.images[0] , class: "review-img"), "#"%>
        </div>
        <div class="review-lower">
          <div class="review-info">
            <i class="far fa-heart"></i>
            <i class="far fa-comment-dots"></i>
            <div class="post-time">
              <i class="far fa-clock clock-icon"></i><%= time_ago_in_words(review.created_at) %>前に投稿
            </div>
          </div>
        </div>
      </div>
      <% end %>
  </div>
</div>

<div class="pagenation-box">
  <%= paginate @reviews %>
</div>